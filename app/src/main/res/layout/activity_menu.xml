<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/menu"
    tools:context="com.example.thiago.alunomapa.MenuActivity">

    <Button
        android:id="@+id/buttonMostrarDiciplinas"


        android:layout_width="143dp"
        android:layout_height="95dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="63dp"
        android:background="@drawable/buttonshape"
        android:backgroundTint="@color/colormenu"
        android:text="Minhas diciplinas"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/buttonMapaSemanal"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/buttonMapaSemanal"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="143dp"

        android:layout_height="95dp"
        android:layout_marginLeft="186dp"
        android:background="@drawable/buttonshape"
        android:backgroundTint="@color/colormenu"
        android:text="Diciplinas semanais"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="63dp" />

    <Button
        android:id="@+id/buttonMapaUnifor"
        android:layout_width="143dp"
        android:layout_height="95dp"

        android:layout_marginLeft="29dp"
        android:background="@drawable/buttonshape"
        android:backgroundTint="@color/colormenu"
        android:text="Mapa Unifor"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonMostrarDiciplinas" />

    <Button
        android:id="@+id/buttonDeletDataBase"
        android:layout_width="213dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="73dp"
        android:background="@drawable/buttonshape"
        android:backgroundTint="@color/colorVermelha"
        android:text="Deletar Todas as Diciplinas"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonMapaUnifor" />

    <Button
        android:id="@+id/buttonCadastrarDiciplinas"
        android:layout_width="143dp"

        android:layout_height="95dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/buttonshape"
        android:backgroundTint="@color/colorVerde"

        android:text="Cadastrar Disciplinas"
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonMapaSemanal"
        app:layout_constraintLeft_toRightOf="@+id/buttonMapaUnifor" />
    <Button
        android:id="@+id/button2sobreapp"
        android:layout_width="59dp"
        android:layout_height="41dp"
        android:layout_marginLeft="133dp"
        android:layout_marginTop="-2dp"
        android:background="?android:attr/alertDialogIcon"
        app:layout_constraintLeft_toRightOf="@+id/buttonMostrarDiciplinas"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
