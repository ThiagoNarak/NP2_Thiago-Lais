<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thiago.alunomapa.MenuActivity">

    <RelativeLayout
        android:layout_width="370dp"
        android:layout_height="450dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="2dp">

        <Button
            android:id="@+id/buttonMostrarDiciplinas"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="76dp"
            android:text="- Exibir Disciplinas" />

        <Button
            android:id="@+id/buttonMapaSemanal"
            android:layout_width="355dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/buttonMostrarDiciplinas"
            android:layout_alignLeft="@+id/buttonMostrarDiciplinas"
            android:layout_alignRight="@+id/buttonMostrarDiciplinas"
            android:layout_alignStart="@+id/buttonMostrarDiciplinas"
            android:layout_below="@+id/buttonMostrarDiciplinas"
            android:layout_marginTop="71dp"
            android:text="- Exibir Matriz Semanal" />

        <Button
            android:id="@+id/buttonMapaUnifor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttonMapaSemanal"
            android:layout_alignLeft="@+id/buttonMapaSemanal"
            android:layout_alignRight="@+id/buttonMapaSemanal"
            android:layout_alignStart="@+id/buttonMapaSemanal"
            android:layout_below="@+id/buttonMapaSemanal"
            android:layout_marginTop="74dp"
            android:text="- Exibir Mapa Unifor" />

        <Button
            android:id="@+id/buttonDeletDataBase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttonMapaUnifor"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/buttonMapaUnifor"
            android:text="Deletar Todas as Diciplinas"
            android:textSize="8sp" />

        <Button
            android:id="@+id/buttonCadastrarDiciplinas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/buttonMapaUnifor"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/buttonMapaUnifor"
            android:layout_alignTop="@+id/buttonDeletDataBase"
            android:layout_toStartOf="@+id/textView7"
            android:text="Cadastrar Disciplinas"
            android:textSize="8sp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
