<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal" >

    <EditText
        android:id="@+id/editTextCadeira"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4.08"
        android:hint="Ex: Calculo 5"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextHorario"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.58"
        android:ems="10"
        android:hint="Ex:M24AB"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextBloco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Ex: D55"

        android:inputType="text" />

    <ToggleButton
        android:id="@+id/toggleButtonSalvarCancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:checked="false"
        android:text="ToggleButton"
        android:textOff="Salvar"
        android:textOn="Cancelar" />

